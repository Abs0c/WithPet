<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_circle">
        <TextView
            android:id="@+id/community_title_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kotra_hope"
            android:text="Title"
            android:paddingLeft="10dp"
            android:textColor="#494747"
            android:textSize="24dp"/>

        <ImageView
            android:id="@+id/imagecheck"
            android:layout_width="37dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="139dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@drawable/add_img"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/community_contents_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kotra_hope"
            android:textColor="#494747"
            android:textSize="19dp"
            android:layout_below="@id/community_title_brief"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:text="Content" />

        <TextView
            android:id="@+id/community_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/flower"
            android:layout_below="@+id/community_contents_brief"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:textColor="#353434"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="1dp"
            android:text="time" />

        <TextView
            android:id="@+id/community_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/flower"
            android:layout_below="@+id/community_time"
            android:textColor="#353434"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="ID" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>