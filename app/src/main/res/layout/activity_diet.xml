<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".Diet"
    android:backgroundTint="#F8FBF8">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/Diet_title"
            android:layout_width="317dp"
            android:layout_height="65dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:fontFamily="@font/ansungtangmyun_bold"
            android:text="강아지 식단 계산기"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"

            android:gravity="center"
            android:text="0"

            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Diet_title" />

        <TextView
            android:id="@+id/kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"

            android:gravity="center"
            android:text="kcal"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.739"
            app:layout_constraintLeft_toRightOf="@+id/calculation"
            app:layout_constraintStart_toEndOf="@+id/calculation"
            app:layout_constraintTop_toBottomOf="@+id/Diet_title" />

        <LinearLayout
            android:id="@+id/Calculation_numbers"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculation">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp">
                <TextView
                    android:id="@+id/diet_pet_name_text"
                    android:layout_width="202dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/kotra_hope2"
                    android:text="강아지의 이름"
                    android:textSize="25dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <Spinner
                    android:id="@+id/diet_pet_select_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="30dp"

                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <TextView
                    android:id="@+id/dog_weight"
                    android:fontFamily="@font/kotra_hope2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="강아지의 몸무게"
                    android:textSize="25dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/weight_write"
                    android:fontFamily="@font/kotra_hope2"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    android:ems="5"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:minEms="1"
                    android:singleLine="true"

                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kotra_hope2"
                    android:text="kg"
                    android:textSize="30dp"
                    app:layout_constraintLeft_toRightOf="@+id/weight_writ"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dog_text"
                    android:layout_width="202dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/kotra_hope2"
                    android:text="강아지의 상태"
                    android:textSize="25dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <Spinner
                    android:id="@+id/pet_situation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="30dp"

                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/sumBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle"
            android:drawableLeft="@drawable/calculator"
            android:text="계산하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Calculation_numbers" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>