<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="4dp">
    <RelativeLayout
        android:background="@drawable/layout_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagecheck_biref"
            android:layout_width="37dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="139dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:visibility="invisible"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/community_title_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imagecheck_biref"
            android:paddingLeft="10dp"
            android:text="Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/community_contents_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_title_brief"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:text="Content" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>