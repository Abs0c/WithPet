<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityView"
    android:background="#D8ECC3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:fontFamily="@font/ef_hyunydororong"
                android:textColor="#434242"
                android:text="자유게시판"
                android:drawableLeft="@drawable/board"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="25dp"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/go1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="더보기"
                android:textColor="#D21515"
                android:gravity="center"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/freelist_brief"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:overScrollMode="never"
            tools:listitem="@layout/community_list_brief"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:fontFamily="@font/ef_hyunydororong"
                android:textColor="#434242"
                android:text="질문게시판"
                android:textSize="25dp"
                android:drawableLeft="@drawable/question"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/go2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="더보기"
                android:textColor="#D21515"
                android:gravity="center"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_brief"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            tools:listitem="@layout/community_list_brief"/>
    </LinearLayout>
</FrameLayout>